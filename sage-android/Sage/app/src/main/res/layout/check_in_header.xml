<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/user_semester_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:text="@string/check_in_summary"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:id="@+id/user_semester_linear_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_semester_summary"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:backgroundTint="@color/gray"
            android:layout_marginRight="6dp"
            android:background="@drawable/ic_alarm_on_black"/>

        <TextView
            android:id="@+id/user_semester_hours_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/check_in_hours_required"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@id/user_semester_linear_hours"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:backgroundTint="@color/gray"
            android:layout_marginRight="6dp"
            android:background="@drawable/ic_done_white"/>

        <TextView
            android:id="@+id/user_semester_number_check_ins"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/user_semester_progress_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:rotation="135"
            android:progressDrawable="@drawable/checkin_progress_bar_circle_background"
            android:progress="75"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/user_semester_progress_bar"
            android:progress="0"
            android:rotation="135"
            android:progressDrawable="@drawable/checkin_progress_bar_circle"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/user_semester_hours"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_semester_total"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="300" />

                <TextView
                    android:id="@+id/user_semester_slash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="20sp"
                    android:text="@string/user_slash"/>

                <TextView
                    android:id="@+id/user_semester_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="300"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_hours"
                android:layout_below="@id/user_semester_hours"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/user_semester_complete"
            android:padding="4dp"
            android:layout_gravity="center|bottom"
            android:textSize="16sp"
            android:text="Complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray"
        android:layout_marginTop="10dp"
        android:layout_below="@id/user_semester_progress_container" />
</RelativeLayout>