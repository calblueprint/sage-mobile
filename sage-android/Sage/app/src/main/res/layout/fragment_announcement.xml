<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_announcement">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <blueprint.com.sage.shared.views.CircleImageView
            android:id="@+id/announcement_pf_pic_single"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/white_circle"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/announcement_user_single"
            style="@style/AnnouncementRow"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:text="User Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/announcement_school_single"
            style="@style/AnnouncementRow"
            android:text="@string/announcement_school"
            android:layout_toRightOf="@id/announcement_user_single"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/announcement_time_single"
            style="@style/AnnouncementRow"
            android:textColor="@color/date_gray"
            android:text="2 days ago"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/announcement_user_single"/>

        <TextView
            android:id="@+id/announcement_title_single"
            style="@style/AnnouncementRow"
            android:text="Title"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:layout_below="@id/announcement_time_single"/>

        <TextView
            android:id="@+id/announcement_body_single"
            style="@style/AnnouncementRow"
            android:text="The actual announcement."
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:layout_below="@id/announcement_title_single"/>

    </RelativeLayout>
</ScrollView>