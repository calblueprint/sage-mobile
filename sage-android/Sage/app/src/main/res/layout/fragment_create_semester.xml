<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        style="@style/FormRelativeLayout"
        android:id="@+id/check_in_request_date_layout">

        <ImageView
            style="@style/FormIcon"
            android:id="@+id/check_in_request_date"
            android:src="@drawable/ic_today_black" />

        <LinearLayout
            style="@style/FormLinearLayout"
            android:layout_toRightOf="@id/check_in_request_date"
            android:layout_toEndOf="@id/check_in_request_date" >

            <TextView
                style="@style/FormLabel"
                android:id="@+id/check_in_request_date_label"
                android:text="@string/check_in_request_date"/>

            <TextView
                style="@style/FormText"
                android:id="@+id/check_in_request_date_field"
                android:hint="@string/check_in_default_date"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>