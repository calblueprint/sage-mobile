<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/create_user_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        style="@style/UserRelativeLayout"
        android:id="@+id/user_name_layout"
        android:layout_below="@id/check_in_request_date_layout">

        <ImageView
            style="@style/UserIcon"
            android:id="@+id/user_name_icon"
            android:src="@drawable/ic_alarm_on_black" />

        <LinearLayout
            style="@style/UserLinearLayout"
            android:layout_toRightOf="@id/user_name_icon"
            android:layout_toEndOf="@id/user_name_icon" >

            <TextView
                style="@style/UserLabel"
                android:id="@+id/user_first_name_text"
                android:text="@string/check_in_request_start_time"/>

            <EditText
                style="@style/UserText"
                android:id="@+id/create_user_first_name"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />

            <EditText
                style="@style/UserText"
                android:id="@+id/create_user_last_name"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        style="@style/UserRelativeLayout"
        android:id="@+id/user_email_layout"
        android:layout_below="@id/check_in_request_date_layout">

        <ImageView
            style="@style/UserIcon"
            android:id="@+id/user_email_icon"
            android:src="@drawable/ic_alarm_on_black" />

        <LinearLayout
            style="@style/UserLinearLayout"
            android:layout_toRightOf="@id/user_email_icon"
            android:layout_toEndOf="@id/user_email_icon" >

            <TextView
                style="@style/UserLabel"
                android:id="@+id/user_email_text"
                android:text="@string/check_in_request_start_time"/>

            <EditText
                style="@style/UserText"
                android:id="@+id/create_user_email"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        style="@style/UserRelativeLayout"
        android:id="@+id/user_password_layout"
        android:layout_below="@id/check_in_request_date_layout">

        <ImageView
            style="@style/UserIcon"
            android:id="@+id/user_password_icon"
            android:src="@drawable/ic_alarm_on_black" />

        <LinearLayout
            style="@style/UserLinearLayout"
            android:layout_toRightOf="@id/user_password_icon"
            android:layout_toEndOf="@id/user_password_icon" >

            <TextView
                style="@style/UserLabel"
                android:id="@+id/check_in_request_start_text"
                android:text="@string/check_in_request_start_time"/>

            <TextView
                style="@style/UserText"
                android:id="@+id/check_in_request_start_field"
                android:hint="@string/check_in_default_time"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        style="@style/UserRelativeLayout"
        android:id="@+id/check_in_request_start_layout"
        android:layout_below="@id/check_in_request_date_layout">

        <ImageView
            style="@style/UserIcon"
            android:id="@+id/check_in_request_start_icon"
            android:src="@drawable/ic_alarm_on_black" />

        <LinearLayout
            style="@style/UserLinearLayout"
            android:layout_toRightOf="@id/check_in_request_start_icon"
            android:layout_toEndOf="@id/check_in_request_start_icon" >

            <EditText
                style="@style/UserLabel"
                android:id="@+id/create_user_password"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />

            <EditText
                style="@style/UserLabel"
                android:id="@+id/create_user_confirm_password"
                android:layout_width="240dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>


    <Spinner
        android:id="@+id/create_user_school"
        android:layout_width="240dp"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/create_user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/create_user_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <blueprint.com.sage.shared.views.CircleImageView
        android:id="@+id/create_user_photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/default_profile"/>
</LinearLayout>