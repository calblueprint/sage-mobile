<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_list_photo"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/user_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user_list_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/user_list_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/user_list_item_verify"
        android:src="@drawable/ic_done_white"
        android:tint="@color/green500"
        android:background="@android:color/transparent"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <ImageButton
        android:id="@+id/user_list_item_delete"
        android:src="@drawable/ic_clear_white"
        android:tint="@color/red500"
        android:background="@android:color/transparent"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</LinearLayout>