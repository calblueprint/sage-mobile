<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AdminPanelDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginLeft">@dimen/admin_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/admin_layout_margin</item>
    </style>

    <style name="AdminPanelLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/admin_layout_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/admin_layout_margin</item>
        <item name="android:paddingRight">@dimen/admin_layout_margin</item>
    </style>

    <style name="AdminPanelText">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AdminPanelHeader" parent="AdminPanelText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue500</item>
        <item name="android:paddingTop">@dimen/admin_layout_margin</item>
        <item name="android:paddingBottom">@dimen/admin_layout_header_margin</item>
        <item name="android:paddingLeft">@dimen/admin_layout_margin</item>
        <item name="android:paddingRight">@dimen/admin_layout_margin</item>
    </style>

    <style name="AdminPanelIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginRight">@dimen/admin_layout_margin</item>
        <item name="android:contentDescription">Image</item>
    </style>

    <style name="AdminPanelTitle" parent="AdminPanelText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>