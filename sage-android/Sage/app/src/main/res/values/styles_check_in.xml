<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CheckInContainerRelativeLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="CheckInLinearLayout">
        <item name ="android:layout_width">wrap_content</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:gravity">center_vertical</item>
        <item name ="android:orientation">horizontal</item>
    </style>

    <style name="CheckInImage">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="CheckInText">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CheckInProgressBarContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="CheckInProgressBarBackground" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:rotation">135</item>
        <item name="android:progressDrawable">@drawable/checkin_progress_bar_circle_background</item>
        <item name="android:progress">75</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="CheckInProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progress">0</item>
        <item name="android:rotation">135</item>
        <item name="android:progressDrawable">@drawable/checkin_progress_bar_circle</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="CheckInPercent">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

